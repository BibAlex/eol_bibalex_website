%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title EOL
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    / core CSS
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'Custom-ar'
    = stylesheet_link_tag 'Custom-en'
    = stylesheet_link_tag 'Custom'
    = stylesheet_link_tag 'responsive-ar'
    = stylesheet_link_tag 'responsive-en'
    = stylesheet_link_tag 'responsive'
    = stylesheet_link_tag 'bootstrap.min'
    = stylesheet_link_tag 'animate.min'
    = stylesheet_link_tag 'font-awesome'
    = stylesheet_link_tag 'main'
    = stylesheet_link_tag 'prettyPhoto'
    = stylesheet_link_tag 'Suzan'
    = stylesheet_link_tag 'slider'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %header#header
      %nav.navbar.navbar-inverse{:role => "banner"}
        .container
          .row
            .col-lg-7.col-md-6.col-sm-6.col-xs-12
              .navbar-header
                %a.navbar-brand{:href => "/"}
                  =image_tag "eol_logo.png", :alt => "logo"
                .lang
                  %select
                    %option English
                    %option Arabic
                    %option French
                    %option Japanese
                    %option Chinese
                .mainMenu
                  %button.btn-search.hidden-lg.hidden-md.hidden-sm{"data-target" => "#myModal", "data-toggle" => "modal", :type => "button"}
                    %i.fa.fa-search{"aria-hidden" => "true"}
                  %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
                    %span.sr-only Toggle navigation
                    %span.icon-bar
                    %span.icon-bar
                    %span.icon-bar
                  %span.menuText.hidden-sm.hidden-xs
                    menu
              .collapse.navbar-collapse.navbar-left
                %ul.nav.navbar-nav
                  %li
                    %a{:href => "http://eol.org/about"}
                      %i.fa.fa-info-circle{"aria-hidden" => "true"}
                      About EOL
                  %li
                    %a{:href => "http://eol.org/news"}
                      %i.fa.fa-newspaper-o{"aria-hidden" => "true"}
                      News
                  %li
                    %a{:href => "http://eol.org/help"}
                      %i.fa.fa-question-circle{"aria-hidden" => "true"}
                      Help
            .col-lg-5.col-md-6.col-sm-6.col-xs-12.coloredMenu
              %ul.topMenu
                %li
                  - unless user_signed_in?
                    %a.signIn{:href => "/users/sign_in"}
                      %i.fa.fa-user-circle{"aria-hidden" => "true"}
                      Sign in
                  - else
                    %a.signIn{:href => "/users/sign_out",:method => :delete}
                      %i.fa.fa-user-circle{"aria-hidden" => "true"}
                      Sign out
                %li.dropdown
                  %a.dropdown-toggle.NetworksLink{"data-toggle" => "dropdown", :href => "#"}
                    Our Networks
                    %i.fa.fa-angle-down
                  %ul.dropdown-menu
                    %li
                      %a{:href => "https://education.eol.org/", :target => "_blank"} Learning + Education
                %li
                  %button.btn-search.globalSearchBtn.hidden-xs{"data-target" => "#myModal", "data-toggle" => "modal", :type => "button"}
                    %i.fa.fa-search{"aria-hidden" => "true"}
                %li
                  %a.DonateBtn{:href => "https://support.si.edu/site/SPageServer?pagename=api_eol_main\&s_src=web_eol_fl"} Donate
            #myModal.searchbox.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
              .modal-dialog{:role => "document"}
                .modal-content
                  .modal-header
                    %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
                      %span{"aria-hidden" => "true"} Ã—
                    %h4.modal-title Search Our Network
                  .modal-body
                    .searchBox
                      %input#globalSearch.form-control{:placeholder => "What you are looking for?"}/
                      %button.searchButton
                        %i.fa.fa-search{"aria-hidden" => "true"}
                  .modal-footer.hide
                    %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
                    %button.btn.btn-primary{:type => "button"} Search
    
    %body
      .container-fluidd
        .content
          = yield
      %script{:src => "assets/js/jquery.js"}
      %script{:src => "assets/js/bootstrap.min.js"}
      %script{:src => "assets/js/jquery.prettyPhoto.js"}
      %script{:src => "assets/js/jquery.isotope.min.js"}
      %script{:src => "assets/js/main.js"}
      %script{:src => "assets/js/wow.min.js"}
      %script{:src => "assets/js/multislider.js"}
  %footer#footer.midnight-blue
    .container
      .row
        .col-sm-6.col-xs-12
          %ul
            %li
              %a{:href => "http://eol.org/terms_of_use"} Terms of Use
            %li
              %a{:href => "http://eol.org/info/glossary"} Glossary
            %li
              %a{:href => "https://support.si.edu/site/SPageServer?pagename=api_eol_main\&s_src=web_eol_fl"} Donate
            %li
              %a{:href => "http://eol.org/contact_us"} Contact Us
        .col-sm-6.col-xs-12
          .social
            %ul.social-share
              %li Follow us on:
              %li
                %a{:href => "https://www.facebook.com/encyclopediaoflife/"}
                  %i.fa.fa-facebook
              %li
                %a{:href => "https://twitter.com/eol"}
                  %i.fa.fa-twitter
