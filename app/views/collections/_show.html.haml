.col-md-3.col-sm-12.col-xs-12
  .collectionInfo
    .row
      .col-md-12.col-sm-3.col-xs-12.collectionImage
        %img{ src: "/assets/download.png", width: "250", height: "250"}
      .col-md-12.col-sm-9.col-xs-12
        .collectionName
          = @collection.name
        .description
          = @collection.description
        - if @collection.users.ids.first == current_user.id
          .Edit_Delete
            %a.btn.btn-primary{ id: "#{@collection.id}", "aria-expanded": "true", "aria-haspopup": "true",
              "data-target": "#edit", "data-toggle": "modal", onclick: "showPopup(this)", role: "button"}
              #{t(:edit_button)}
            %nbsp
              = link_to "#{t(:delete_button)}", collection_path(id: @collection.id), method: :delete,
                data: {confirm: "#{t(:confirm_message)}"}, class: "btn btn-primary"

