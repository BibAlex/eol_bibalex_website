.container
  %script{ src: "//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"}
  %script{ src: "//code.jquery.com/jquery-1.11.1.min.js"}
  .container
    .row
      .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
        = form_with(model: @collection, local: true) do |f|
          = f.hidden_field :user_id
          = hidden_field_tag 'user_id', '0'
          %br
          %h2
            Edit Collection
          %hr.colorgraph
          .form-group
            = f.label :name
            %br
            = f.text_field :name, class: "form-control"
          .form-group
            = f.label :description
            %br
            = f.text_field :description, class: "form-control"
            %br
            = f.submit "#{t(:update_button)}", class: "btn btn-primary"
        %button.btn.btn-primary{"data-dismiss": "modal", type: "button"} x
