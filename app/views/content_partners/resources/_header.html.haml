%span.pull-right
  - if current_page? resources_search_path
    %a.btn.btn-primary{href: resources_path, "data-toggle": "tooltip", "data-placement": "bottom",
    "title": "#{t(:back_resources)}"}
      %i.fa.fa-arrow-left{"aria-hidden": "false"}
  %a.btn.btn-primary{id: "searchResources", "data-toggle": "tooltip", "data-placement": "bottom",
  "title": "#{t(:search_resources)}", role: "button", onClick: "showPopup(this)"}
    %i.fa.fa-search{"aria-hidden": "false"}

.modal{id: "popup_searchResources", "aria-labelledby": "popup_searchResourcesLabel", role: "dialog", tabindex: "-1"}
  .modal-dialog{ role: "document"}
    .modal-content
      .modal-header
        .form-group.row.form-inline
          .col-md-10.col-sm-10.col-xs-10
            %h2.editLabel.modal-title
              = t(:search_resources)
          .col-md-2.col-sm-2.col-xs-2
            %button{id: "searchResources", class: "close", tabindex: "1", onclick: 'hidePopup(this, event)', "data-dismiss": "modal"}
              x
      .modal-body
        .searchBox
          = form_tag(resources_search_path, method: :get) do |form|
            = text_field_tag(:resources_query, params[:resources_query], placeholder: t(:search_placeholder),
             class: "modal-body searchBox", required: "true")
            %button.searchButton
              %i.fa.fa-search{"aria-hidden": "true", remote: true}
