= javascript_include_tag 'search'
- @collection= Collection.find(@collection_id)
= render("collected_pages/show")
.container
  .col-md-9.col-sm-12.col-xs-12
    %h2 #{t(:search_results)}
    - unless @result.nil?
      -@result.each do |result|
        - @page = Page.find(result.id)
        - @medium = @page.media.first
        - @sci_name = @page.scientific_name
        - unless @medium.nil?
          %img{ src: @medium.base_url, width: "100", height: "100"}  
        - unless @page.scientific_name.nil?       
          %h3= link_to @sci_name , page_path(@page) 
          %br
