%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  
  .form-group
    = f.label :username
    %i (Should not contain any blank spaces)
    %br/
    = f.text_field :username, required: true, class: "form-control"
    %br/
      
  .form-group
    = f.label :email
    %br/
    = f.email_field :email, required: true, autofocus: true, class: "form-control"

  .form-group
    = f.label :password
    %i (Should be at least 8 characters long, include one uppercase letter, one lowercase latter, and one special character.)
    %br/
    = f.password_field :password, required: true, autocomplete: "off", class: "form-control"
  .form-group
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, required: true, autocomplete: "off", class: "form-control"
  .form-group
    = f.label I18n.t(:recaptcha), required: true
    = recaptcha_tags(theme: 'clean', callback: 'recaptchaCallback')
    - if flash.any? { |name, msg| name == "recaptcha_error" }
      %span.error
        = I18n.t('recaptcha_error')
    
  .actions
    = f.submit "Sign up", class: "btn btn-primary"
= render "devise/shared/links"