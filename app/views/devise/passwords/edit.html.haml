%script{src: "//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"}
.container
  .row
    .col-xs-12.col-sm-8.col-md-6
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f|
        %h2 Change your password
        %br
        = f.hidden_field :reset_password_token
        %div.changePass
          %div.form-horizontal.formStyle
            .form-group.row.form-inline
              %label.col-md-4.col-sm-3.col-xs-12.control-label
                %span{ style: "color: red"}> *
                ="New password"
              .col-md-8.col-sm-9.col-xs-12
                = f.password_field :password, autofocus: true, autocomplete: "off"
              - if @minimum_password_length
                %span.note
                  %em
                    (#{@minimum_password_length} characters minimum)
            .form-group.row.form-inline
              %label.col-md-4.col-sm-3.col-xs-12.control-label
                %span{ style: "color: red"}> *
                ="Confirm new password"
              .col-md-8.col-sm-9.col-xs-12
                = f.password_field :password_confirmation, autocomplete: "off"
        %hr.colorgraph
          .input-group
            .row
              .col-xs-12
                = resource_error_messages(resource)
                %input.btn.btn-primary.btn-lg{ tabindex: "5", type: "submit",
                 value: "Change my password", style: "margin: 0 40px;"}
