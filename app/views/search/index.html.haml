= javascript_include_tag 'search'
%body  
    %header  
        .wrapper.clearfix  
            = form_tag(search_path, method: :get) do 
                = text_field_tag(:query, params[:query])
                = submit_tag "Search"
        - unless params[:query].nil?
            -# - unless @scientific_names.size == 0 
                -# = check_box_tag 'scientific_names', 'scientific_names'
                -# = label "scientific_names", "scientific names"
            - unless @pages.size == 0 
                = check_box_tag 'pages', 'pages'
                = label "pages", "pages"
            = submit_tag "filter", :id => "filter"
            = will_paginate @results
            = content_tag_for(:li, @results) do |result|
                -# - if result.instance_of? ScientificName
                    # %img{:src => result.thumbnail_path, :width =>"100", :height =>"100"}
                    # %i= result.url 
                - if result.instance_of? Page
                    %img{:src => result.medium.base_url, :width =>"100", :height =>"100"}
                    = link_to result.scientific_name, page_path(result.id)            
