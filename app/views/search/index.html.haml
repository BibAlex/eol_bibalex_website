= javascript_include_tag 'search'
%body
  .container    
  %br
  %br
  .container    
    - unless params[:query].nil?
      .row
        .col-lg-9
          .row
            .col-lg-12
              %h2.mainTitle
                Search Results
              %br/
          -@results.each do|result| 
            - if result.instance_of? Page
              %article.search-result.row
                .col-xs-12.col-sm-12.col-md-2
                  - unless result.media.first.nil?
                    %img.thumbnail{:src => result.media.first.base_url , :width =>"100", :height =>"100"}/
                  - else
                    %img.thumbnail{:src => "download.png" , :width =>"100", :height =>"100"}/
                .col-xs-12.col-sm-12.col-md-10
                  %h3.marginTop0
                    %a{:href => page_path(result.id), :title => ""} #{result.scientific_name}
                %span.clearfix.borda
          = will_paginate @results
        .col-lg-3
          %article.card-group-item.well
            %header.card-header
              %h2.mainTitle Filter by type
              - unless @pages.size == 0
                %label.form-check
                  %input.form-check-input{:type => "checkbox", :value => ""}/
                  %span.form-check-label
                    pages
              %br  
              = submit_tag "filter", :id => "filter"
