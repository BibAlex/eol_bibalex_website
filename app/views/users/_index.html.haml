%h2.mainTitle
  %strong
    = t(:users)
  %span.pull-right
    %a.btn.btn-primary{id: "searchUsers", "data-toggle": "modal", onclick: "showPopup(this)", role: "button"}
      %i.fa.fa-search{"aria-hidden": "false"}
    %a.btn.btn-primary{href: new_user_admin_registration_path}
      +
.clearfix
- @users.each do |user|
  .row
    %a{href: user_path(user.id)}
      .col-xs-4.col-sm-2.col-md-2
        %img.thumbnail{src: "/assets/avatar3.png", width: "100", height: "100"}
    %h3
      %strong
        .col-xs-8.col-sm-10.col-md-10
          %a{href: user_path(user.id)}
            = user.username
    .pull-right
      - if user.confirmed_at.nil?
        %span.dropdown
          = form_for(user, url: confirm_user_path(user.id), method: :post) do |f|
            %input.btn.btn-success.btn{ type: "submit", value: "#{t(:activate_button)}"}
      %span.dropdown
        %a.dropdown-toggle.btn.btn-primary{href: edit_user_registration_admin_path(id: user.id), style: "width: 100"}
          = t(:edit_button)

= will_paginate @users
