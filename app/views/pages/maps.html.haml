.container
  %h2.mainTitle
    %span{ style: "padding-bottom: 10px; display: inline-block"}
      = @page.scientific_name
    .pull-right
      = render("tabs")
    .clearfix
  .col-md-8
    %h2.smallTitle #{t(:maps)}  
  .row
    .col-md-8
      = render("maps")
    .col-md-4
      %aside
        .widget.categories
          %h3 #{t(:taxon_card)}
          .row
            .col-sm-12
              .single_comments
                = @page.scientific_name
                = image_tag "avatar3.png", alt: ""
