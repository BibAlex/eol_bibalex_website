.desc
  %h2= 'Scientific Names'
  %div.uk-grid-small.uk-child-width-1-3{ uk: { grid: true }, class: "uk-child-width-expand@s" }
    - @page.scientific_names.group_by {|n| n.taxonomic_status.name }.each do |status, names|
      = status
      %br
      -names.each do |name|
        =name.canonical_form
        %br
    = "_________________________"  
  %h2= 'Vernaculars'
  %div
    - if @page.vernaculars.empty?
      = 'No vercaulars for this page'
    - else  
      - @page.vernaculars.group_by { |n| n.language.code }.each do |language, names|
        = language
        %br
        -names.each do |name|
          = name.string
          %br
      = '_______________________'  
  = render('pages/classification')
